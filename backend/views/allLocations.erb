</script>

<script type="text/x-handlebars" id="location">


   <form role="form" id="edit_form" class="form-horizontal well">
   <div class="form-group">
   <label for="inputEmail3" class="col-sm-2 control-label">Title of Location</label>
    <div class="col-sm-10">
    {{input type="hidden" name="action" value="edit" class="form-control"}}
    	    {{input type="text" name="title" value=title class="form-control"}}

	    {{input type="text" name="address" value=address class="form-control"}}
	    {{input type="hidden" name="slug" value=slug class="form-control"}}
	    {{input type="text" name="createdBy" value=createdBy disabled="disabled" class="form-control"}}
	    {{input type="number" name="latitude" value=latitude class="form-control"}}
	    {{input type="number" name="longitude" value=longitude class="form-control"}}
	    {{input type="text" name="category" value=category class="form-control"}}
	    <a {{action "ajaxCall"}} href="#" class="btn btn-success complete_edit">Complete Edit</a>
	    <a {{action "closeEditForm"}} href="#" class="btn btn-warning">Cancel and Go Back</a>
	 </div>
</form>

  </script>


<script type="text/x-handlebars" id="locations">
<p style="display:none" class="edit-success text-success">Successfully Edited a Location!</p>
<p style="display:none" class="delete-success text-danger">Successfully Deleted a Location</p>

<table class="table table-hover table-striped loc-table">
{{#each}}
		<tr class={{addRowClass}}>
			<td>{{title}}</td>
			<td>{{slug}}</td>
			<td>{{address}}</td> 
			<td>{{latitude}}</td> 
			<td>{{longitude}}</td> 
			<td>{{category}}</td>
			<td>
			<a {{action "openEdit" this }} class="btn btn-success edit-loc">Edit</a> 
			
			<button {{action "openDelete" this}} class="btn btn-danger btn-delete">Delete</button>
			</td>
		</tr>
 {{/each}}
</table>

{{outlet}}
  </script>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
